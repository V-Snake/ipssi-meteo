{
  "id": null,
  "title": "Weather Pipeline - Real Time Metrics",
  "tags": ["weather", "realtime", "metrics"],
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Pipeline Overview",
      "type": "text",
      "gridPos": {
        "h": 3,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "content": "<div style='text-align: center; padding: 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 10px; color: white;'><h1 style='margin: 0; font-size: 28px;'>üå§Ô∏è Weather Pipeline - Real Time Metrics</h1><p style='margin: 10px 0 0 0; font-size: 16px; opacity: 0.9;'>Visualiser les m√©triques du pipeline en temps r√©el</p></div>",
        "mode": "html"
      }
    },
    {
      "id": 2,
      "title": "Kafka Status",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 3
      },
      "targets": [
        {
          "expr": "up{job=\"kafka\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      }
    },
    {
